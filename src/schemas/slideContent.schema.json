{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://salesppt.local/schemas/slide-content.json",
  "title": "SlideContent",
  "type": "object",
  "additionalProperties": false,
  "required": ["deck_template_version", "slides"],
  "properties": {
    "deck_template_version": {
      "type": "string",
      "const": "SALES_PPT_V1"
    },
    "slides": {
      "type": "array",
      "minItems": 8,
      "maxItems": 8,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "slide_number",
          "placeholder_id",
          "title",
          "subtitle",
          "bullets",
          "proof_point",
          "speaker_notes",
          "open_questions",
          "template_bindings"
        ],
        "properties": {
          "slide_number": { "type": "integer", "minimum": 1, "maximum": 8 },
          "placeholder_id": {
            "type": "string",
            "enum": [
              "SLIDE_01_EXEC_SUMMARY",
              "SLIDE_02_PROBLEM",
              "SLIDE_03_SOLUTION",
              "SLIDE_04_DIFFERENTIATION",
              "SLIDE_05_PROOF",
              "SLIDE_06_BUSINESS_IMPACT",
              "SLIDE_07_ROLLOUT",
              "SLIDE_08_CLOSE_AND_QA"
            ]
          },
          "title": { "type": "string", "minLength": 1, "maxLength": 42 },
          "subtitle": { "type": "string", "minLength": 1, "maxLength": 70 },
          "bullets": {
            "type": "array",
            "minItems": 1,
            "maxItems": 3,
            "items": { "type": "string", "maxLength": 90 }
          },
          "proof_point": { "type": "string", "minLength": 8, "maxLength": 160 },
          "speaker_notes": { "type": "string", "minLength": 320, "maxLength": 1400 },
          "open_questions": {
            "type": "array",
            "maxItems": 5,
            "items": { "type": "string", "maxLength": 140 }
          },
          "template_bindings": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "TITLE",
              "SUBTITLE",
              "BULLET_1",
              "BULLET_2",
              "BULLET_3",
              "PROOF_POINT",
              "SPEAKER_NOTES",
              "OPEN_QUESTIONS"
            ],
            "properties": {
              "TITLE": { "type": "string", "maxLength": 42 },
              "SUBTITLE": { "type": "string", "maxLength": 70 },
              "BULLET_1": { "type": "string", "maxLength": 90 },
              "BULLET_2": { "type": "string", "maxLength": 90 },
              "BULLET_3": { "type": "string", "maxLength": 90 },
              "PROOF_POINT": { "type": "string", "maxLength": 160 },
              "SPEAKER_NOTES": { "type": "string", "maxLength": 1400 },
              "OPEN_QUESTIONS": { "type": "string", "maxLength": 800 }
            }
          }
        }
      }
    }
  }
}
